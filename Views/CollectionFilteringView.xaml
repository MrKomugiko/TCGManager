<UserControl x:Class="TCGManager.Views.CollectionFilteringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCGManager.Views" xmlns:viewmodels="clr-namespace:TCGManager.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CollectionFilteringViewModel}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Filter by name:" FontSize="15"/>
        <TextBox Name="Filter_Name"  Grid.Column="1" Grid.Row="0" Text="Name..."/>
        <Button Grid.Column="0" Grid.Row="1" Content=" Apply Filters" Width="75" Margin="2" 
                Command="{Binding SetFilterPropertyCommand}" 
                CommandParameter="{Binding ElementName=Filter_Name, Path=Text}"/>
    </Grid>
</UserControl>
